<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.mapper.BoardAttachMapper">
	<insert id="insert">
		insert into spring_attach(uuid,uploadPath,fileName,fileType,bno) values(#{uuid},#{uploadPath},#{fileName},#{fileType},#{bno})
	</insert>

	<!-- 첨부파일 가져오기  -->
	<select  id="read" resultType="com.company.domain.AttachFileDTO">
		select * from spring_attach where bno = #{bno}
	</select>
	
	<!-- 첨부파일 삭제  -->
	<delete id="deleteAll">
		delete from spring_attach where bno=#{bno}
	</delete>
	
	<!-- 어제날짜 첨부파일 가져오기  -->
	<select  id="getOldFiles" resultType="com.company.domain.AttachFileDTO">
		select * from spring_attach
		where uploadPath = to_char(sysdate-1,'yyyy\mm\dd')
	</select>


</mapper>